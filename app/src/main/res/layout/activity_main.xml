<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <library.yugisoft.module.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <library.yugisoft.module.ViewPager
            android:id="@+id/page1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_dialog_box_yes_button"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_new_green"
                android:orientation="vertical"></LinearLayout>

        </library.yugisoft.module.ViewPager>

        <library.yugisoft.module.ViewPager
            android:id="@+id/page2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_dialog_box_title"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_dialog_box_no_button"
                android:orientation="vertical"></LinearLayout>

        </library.yugisoft.module.ViewPager>

    </library.yugisoft.module.ViewPager>

</LinearLayout>