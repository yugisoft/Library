<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#00000000</item>
    </style>
    <style name="FadeInPopWin">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowEnterAnimation">@anim/pop_win_content_fade_in</item>
        <item name="android:windowExitAnimation">@anim/pop_win_content_fade_out</item>
    </style>

    <declare-styleable name="NumericPicker">
        <attr name="Value" format="float" />
        <attr name="MaxValue" format="float" />
        <attr name="MinValue" format="float" />
        <attr name="ButtonGravity" format="enum">
            <enum name="Horizantal" value="0"/>
            <enum name="Vertical" value="1"/>
        </attr>
    </declare-styleable>




    <attr name="focusedDrawable" format="color|reference" />
    <attr name="unFocusedDrawable" format="color|reference" />
    <attr name="rowColor1" format="color|reference"/>
    <attr name="rowColor2" format="color|reference"/>
    <attr name="headerBackColor" format="color|reference"/>
    <attr name="headerForeColor" format="color|reference"/>

    <attr name="viewID" format="reference" />
    <attr name="showHeader" format="boolean" />
    <attr name="showFilter" format="boolean" />
    <attr name="dataType" format="enum">
        <enum name="String" value="0" />
        <enum name="Int" value="1" />
        <enum name="Double" value="2" />
        <enum name="Date" value="3" />
        <enum name="Long" value="4" />
        <enum name="Boolean" value="5" />
        <enum name="AUTO" value="6" />
    </attr>
    <attr name="format" format="string"/>
    <attr name="fieldName" format="string"/>
    <attr name="autoWidth" format="boolean"/>
    <attr name="autoAligment" format="boolean"/>
    <attr name="headerLayout" format="reference"/>
    <attr name="detailLayout" format="reference"/>
    <attr name="textColor" format="color|reference"/>
    <attr name="rowColor" format="color|reference"/>

    <declare-styleable name="InputLayout">
        <attr name="focusedDrawable" />
        <attr name="unFocusedDrawable" />
        <attr name="hint" />
    </declare-styleable>
    <declare-styleable name="ViewLayout">
        <attr name="focusedDrawable" />
        <attr name="unFocusedDrawable"  />
        <attr name="viewID"  />
        <attr name="hint" />
    </declare-styleable>
    <declare-styleable name="DataGridView">

        <attr name="showHeader" />
        <attr name="showFilter" />
        <attr name="textSize"   />
        <attr name="textColor"   />
        <attr name="headerLayout" />
        <attr name="rowColor1" />
        <attr name="rowColor2" />
        <attr name="headerBackColor" />
        <attr name="headerForeColor" />
        <attr name="rowColor" />

    </declare-styleable>
    <declare-styleable name="DataGridTextView">

        <attr name="dataType" />
        <attr name="format"   />
        <attr name="fieldName"/>
        <attr name="autoWidth"/>
        <attr name="autoAligment" />


    </declare-styleable>

    <declare-styleable name="BaseGridTextView">

        <attr name="dataType" />
        <attr name="format"   />
        <attr name="fieldName"/>
        <attr name="autoWidth"/>
        <attr name="autoAligment" />


    </declare-styleable>
    <declare-styleable name="FloatingActionMenuButton">
        <attr name="fab_colorPressed" format="color"/>
        <attr name="fab_colorDisabled" format="color"/>
        <attr name="fab_colorNormal" format="color"/>
        <attr name="fab_icon" format="reference"/>
        <attr name="fab_size" format="enum">
            <enum name="normal" value="0"/>
            <enum name="mini" value="1"/>
        </attr>
        <attr name="fab_title" format="string"/>
        <attr name="fab_stroke_visible" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="AddFloatingActionMenuButton">
        <attr name="fab_plusIconColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="FloatingActionsMenu">

        <attr name="fab_addButtonColorPressed" format="color"/>
        <attr name="fab_addButtonColorNormal" format="color"/>
        <attr name="fab_addButtonSize" format="enum">
            <enum name="normal" value="0"/>
            <enum name="mini" value="1"/>
        </attr>
        <attr name="fab_addButtonPlusIconColor" format="color"/>
        <attr name="fab_addButtonStrokeVisible" format="boolean"/>
        <attr name="fab_labelStyle" format="reference"/>
        <attr name="fab_labelsPosition" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
        <attr name="fab_expandDirection" format="enum">
            <enum name="up" value="0"/>
            <enum name="down" value="1"/>
            <enum name="left" value="2"/>
            <enum name="right" value="3"/>
        </attr>
        <attr name="fab_collapseForClick" format="boolean"/>
    </declare-styleable>


    <declare-styleable name="BaseDataGridView">

        <attr name="showHeader" />
        <attr name="showFilter" />
        <attr name="textSize"   />
        <attr name="textColor"   />
        <attr name="headerLayout" />
        <attr name="detailLayout" />
        <attr name="rowColor1" />
        <attr name="rowColor2" />
        <attr name="headerBackColor" />
        <attr name="headerForeColor" />
        <attr name="rowColor" />

    </declare-styleable>


</resources>