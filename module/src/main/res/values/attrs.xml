<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="contentView" format="reference" />
    
    <declare-styleable name="MaskedEditText"><attr format="string" name="mask"/><attr format="string" name="allowed_chars"/><attr format="string" name="denied_chars"/><attr format="string" name="char_representation"/><attr format="boolean" name="keep_hint"/></declare-styleable>
    <declare-styleable name="myViews">


        <attr name="baslik" format="string" />
        <attr name="fontsize" format="dimension" />
        <attr name="image_w" format="integer" />
        <attr name="image_h" format="integer" />
        <attr name="forecolor" format="color" />
        <attr name="image" format="color|reference" />
        <attr name="backgroundimage" format="color|reference" />
        <attr name="TintColor" format="color|reference" />
        <attr name="padding_r" format="integer"/>
        <attr name="yon" format="integer"/>
        <attr name="contentView"/>
    </declare-styleable>
    <declare-styleable name="LoopView">
        <attr name="lineColor" format="color"/>
        <attr name="topBottomTextColor" format="color"/>
        <attr name="centerTextColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="canLoop" format="boolean"/>
        <attr name="initPosition" format="integer"/>
        <attr name="drawItemCount" format="integer"/>
    </declare-styleable>
    <declare-styleable name="CirclePageIndicator">
        <attr name="indicator_spacing" format="dimension" />
    </declare-styleable>
    
    
    
    <attr name="decimal" format="integer"/>
    <attr name="currency" format="string"/>

    <declare-styleable name="CurrencyTextView">
        <attr name="decimal" />
        <attr name="currency" />
    </declare-styleable>

    <attr name="openShowing" format="boolean" />
    <attr name="_touchOnSlide" format="boolean"/>

    <attr name="_State" format="enum">
        <enum name="Hidden" value="0" />
        <enum name="Visible" value="1" />
    </attr>
    <attr name="_Title" format="string"/>
    <attr name="_Image" format="reference" />
    <attr name="_Backgorund" format="color"/>

    <declare-styleable name="ResizeLayout">
        <attr name="openShowing" />
        <attr name="_State"/>
        <attr name="_touchOnSlide" />
    </declare-styleable>

    <declare-styleable name="ResizeButton">
        <attr name="_Title" />
        <attr name="_Image" />
        <attr name="_Backgorund" />
    </declare-styleable>

</resources>