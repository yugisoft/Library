<?xml version="1.0" encoding="utf-8"?>
<library.yugisoft.module.ResizeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/exResize"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/btn_confirm_color"
    android:gravity="center_horizontal"
    android:minHeight="100dp"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/exButton"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/exImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/exTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resize Button"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/exLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="2dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

    </LinearLayout>

    <GridView
        android:id="@+id/exGrid"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="2dp"
        android:nestedScrollingEnabled="true"
        android:numColumns="2"

        >

    </GridView>

</library.yugisoft.module.ResizeLayout>